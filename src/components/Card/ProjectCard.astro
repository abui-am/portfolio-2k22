---
import { Image } from '@astrojs/image/components';
import Tag from '../Tag/Tag.astro';
export type Props = {
  title: string;
  description: string;
  imageUrl: string;
  id: number;
  url?: string | undefined;
  skills: string[];
};
const { title, description, imageUrl, url, skills } = Astro.props;
---

<div class='gradient p-[1px] rounded-lg h-[350px]'>
  <div class='relative overflow-hidden h-full'>
    <Image
      alt={title}
      class='w-full rounded-lg object-cover'
      src={imageUrl}
      height={348}
      aspectRatio={16 / 9}
      loading='lazy'
    />
    <div class='bottom-0 left-0 right-0 absolute bg-white rounded-b-lg p-6'>
      {
        url ? (
          <a href={url} target='_blank' rel='noopener noreferrer'>
            <h2 class='text-xl transition-colors font-bold mb-2 hover:text-gradient'>
              {title}
            </h2>
          </a>
        ) : (
          <h2 class='text-xl transition-colors font-bold mb-2'>{title}</h2>
        )
      }

      <p class='text-gray-800 mb-4'>
        {description}
      </p>
      <div class='mb-2 flex gap-3'>
        {skills?.map((skill) => <Tag>{skill}</Tag>)}
      </div>
    </div>
  </div>
</div>
