---
export type Props = {
  noImage?: boolean;
  imageUrl: string;
  title: string;
  description: string;
  url: string;
  minRead: string;
};

const { noImage, imageUrl, title, description, minRead, url } = Astro.props;
---

<div
  class:list={['gradient p-[1px] rounded-lg h-full', { 'h-[350px]': !noImage }]}
>
  <div class='relative overflow-hidden h-full'>
    {
      !noImage && (
        <img
          class:list={['w-full rounded-lg', { 'h-[348px]': !noImage }]}
          src={imageUrl}
        />
      )
    }

    <div
      class:list={[
        { 'bottom-0 left-0 right-0 absolute': !noImage },
        { 'rounded-t-lg h-full': noImage },
        'bg-white rounded-b-lg p-6',
      ]}
    >
      <h2 class='text-xl font-bold mb-2'>{title}</h2>
      <p class='text-gray-800 mb-4'>
        {description}
      </p>

      <div class='flex justify-between'>
        <a class='text-gradient font-bold underline' href={url}>Read more</a>
        <span class='text-gray-600 font-bold'>{minRead} min read</span>
      </div>
    </div>
  </div>
</div>
